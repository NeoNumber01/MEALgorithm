{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "meal-algorithm",
  "version": "0.1.0",
  "identifier": "com.mealalgorithm.app",
  "build": {
    "devUrl": "https://mea-lgorithm.vercel.app/"
  },
  "app": {
    "windows": [
      {
        "url": "https://mea-lgorithm.vercel.app/",
        "title": "meal-algorithm",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-linking": {
      "customScheme": "com.mealalgorithm.app"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
